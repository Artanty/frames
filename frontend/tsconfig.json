{
  "compilerOptions": {
    "types": ["react/next", "react-dom/next"],
    "allowSyntheticDefaultImports": true,
    // "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "outDir": "build/dist",
    "module": "es6",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    // "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "paths": {
      // "@/*": ["./src/*"],
			"@styles/*": ["./src/styles/*"],
      "@static/*": ["./src/static/*"],
    }, 
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack.config.js",
    "webpack.config.dev.js",
    "webpack.config.common.js",
    "webpack.config.production.js",
    "jest",
    "src/setupTests.ts"
  ],
  "types": [
    "typePatches"
  ]
}